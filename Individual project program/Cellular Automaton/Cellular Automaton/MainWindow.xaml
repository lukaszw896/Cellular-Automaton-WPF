<Controls:MetroWindow x:Class="Cellular_Automaton.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        Title="MainWindow" MinHeight="650" MinWidth="1000" Height="650" Width="1000" Loaded="MetroWindow_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Background="Aquamarine" Opacity="0.6">
            <Canvas Name="gridCanvas" Margin="10,10,10,80" Background="white"></Canvas>
            <Grid Height="80" VerticalAlignment="Bottom">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Slider Name="zoomSlider" VerticalAlignment="Center" Margin="10" ValueChanged="zoomSlider_ValueChanged" Value="10" Minimum="1" Maximum="30"></Slider>
            </Grid>
        </Grid>
        <Grid Background="Aqua" Opacity="0.2" Grid.Column="1">
            
        </Grid>
    </Grid>
</Controls:MetroWindow>
